#!/bin/bash
NVIM=0

if [ ${#} -gt 0 ]; then
    if [ ${1} == '--help' ] || [ ${1} == '-h' ]; then
        echo "usage: ${0} [--nvim]"
        echo -e "  --nvim\tconfigure nvim configs. Disabled by default."
        exit 0
    elif [ ${1} == '--nvim' ]; then
        NVIM=1
    fi
fi

if [ -z "$(command -v tmux)" ]; then
    echo -e "\033[33mWARN\033[0m: tmux is not installed." 1>&2
    exit 1
fi

ln -s "$(pwd)/.tmux.conf" ~/.tmux.conf 2>/dev/null
ln -s "$(pwd)/.vimrc" ~/.vimrc 2>/dev/null
if [ $NVIM -eq 1 ]; then
    ln -s "$(pwd)/nvim" ~/.config/nvim 2>/dev/null
fi
